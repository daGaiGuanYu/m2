.page-container.home
  display: flex
  aside
    width: 180px
    margin: 1em 0
    .tag-list
      li
        line-height: 2.5
        padding: 0 1em
        border-radius: 4px
        user-select: none
        cursor: pointer
        transition: all ease .3s
        &:hover
          background: rgba(0, 0, 0, .05)
  article
    flex: 1
    margin: 1em 0 1em 2em